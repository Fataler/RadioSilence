    scene CG_NektarxRey1 zorder 2
    show CG_NektarxRey_fon zorder 0
    show CG_NektarxRey_tumansk_nad zorder 50 at fog_float(z=1.3, ypos=0.4)
    show CG_NektarxRey_fon_tumansk_pod zorder 1 at fog_float(t=40, z=1.3)
    with dissolve

